{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"KnittingPattern",
  "description":"A knitting pattern specification. Defines a file name and knitting specs.",
  "type":"object",
  "properties":{
    "filename":{
      "description":"The name of the file that holds the pattern.",
      "type":"string"
    },
    "name":{
      "description":"Name of the pattern",
      "type":"string"
    },
    "dimensions":{
      "type":"object",
      "properties":{
        "image_length":{
          "type":"integer"
        },
        "image_width":{
          "type":"integer"
        },
        "physical_length":{
          "type":"number"
        },
        "physical_width":{
          "type":"number"
        },
        "units":{
          "type":"string"
        }
      },
      "required":[
        "physical_length",
        "physical_width",
        "units"
      ]
    },
    "colors":{
      "type":"integer"
    }
  },
  "required":[
    "filename",
    "name"
  ]
}